{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDirs": ["./src", "./"],
    "noEmit": false,
    "target": "ESNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noUnusedLocals": true,
    "sourceMap": true,
    "module": "NodeNext"
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "dist"]
}
